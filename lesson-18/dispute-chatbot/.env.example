# Dispute Chatbot Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required)
# Used for: dispute classification, evidence extraction, judges
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (optional)
# Used for: alternative LLM provider
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Redis URL (optional, for state persistence)
# Used for: state recovery, session management
REDIS_URL=redis://localhost:6379

# Logging level
LOG_LEVEL=INFO

# Chainlit configuration
CHAINLIT_AUTH_SECRET=your-secret-key-here

# V9 RAG Classification Configuration
# Enable/disable RAG-based precedent retrieval
CLASSIFY_RAG_ENABLED=true
# Number of precedents to retrieve
CLASSIFY_RAG_TOP_K=3
# Minimum similarity threshold for retrieval
CLASSIFY_RAG_THRESHOLD=0.4
# Threshold for high-confidence precedent match
CLASSIFY_RAG_HIGH_CONFIDENCE=0.85
